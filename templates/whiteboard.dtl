<html>
	<head>
		<link rel='stylesheet' href='/css/spectrum.css' />
		<link rel="stylesheet" href="/css/jquery.mobile-1.4.3.min.css" />
		<link rel="stylesheet" type="text/css" href="/css/whiteboard.css" media="all">
		<script type="text/javascript" src="/js/lib/jquery-2.1.1.min.js"></script>
		<script src="/js/lib/jquery.mobile-1.4.3.min.js"></script>
		<script src='/js/spectrum.js'></script>
		<script type="text/javascript" src="/js/whiteboard.js"></script>
		<title>
			Fing WhiteBoard: {{ whiteboard_id }}
		</title>
	</head>
	<body data-whiteboard="{{ whiteboard_id }}" >
		<div id='info-bar'>
			<div id='viewers'></div>
		</div>
		<canvas id='canvas' width="1800" height="900"></canvas>
		<div id='controls'>
			<div class='input-container'>
				<label for='colorpicker'> Color:</label><input id='colorpicker' data-role='none' type='color' name='color' value='#000000' />
			</div>
			<label for='size-control'>Size:</label><input id='size-control' type='range' value=5 min=1 max=150>
			<button id='clear-canvas' type='button'>Clear</button>
		</div>
	</body>
</html>
